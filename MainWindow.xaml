<Window x:Class="SensorMonitorDesktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:SensorMonitorDesktop.Views"
        Title="Sensor Management System" 
        Height="700" 
        Width="1300"
        MinHeight="600"
        MinWidth="1100"
        WindowStartupLocation="CenterScreen"
        Background="#F8F9FA">

    <Window.Resources>
        <!-- Modern Colors -->
        <SolidColorBrush x:Key="PrimaryColor" Color="#1E88E5" />
        <SolidColorBrush x:Key="DarkColor" Color="#263238" />
        <SolidColorBrush x:Key="LightGray" Color="#ECEFF1" />

        <!-- Tab Style -->
        <Style TargetType="TabItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border Name="Border"
                                Background="Transparent"
                                BorderThickness="0,0,0,2"
                                BorderBrush="Transparent"
                                Padding="20,12"
                                Margin="0,0,2,0">
                            <ContentPresenter ContentSource="Header"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="White" />
                                <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource PrimaryColor}" />
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#F5F5F5" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{StaticResource DarkColor}"
                Height="65">
            <Grid Margin="25,0">
                <StackPanel Orientation="Horizontal" 
                            VerticalAlignment="Center">
                    <!-- Logo Icon -->
                    <Border Background="{StaticResource PrimaryColor}"
                            Width="40"
                            Height="40"
                            CornerRadius="6"
                            Margin="0,0,12,0">
                        <TextBlock Text="📊"
                                   FontSize="22"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center" />
                    </Border>
                    
                    <!-- Title -->
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Sensor Management System"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="White" />
                        <TextBlock Text="Industrial IoT Platform"
                                   FontSize="11"
                                   Foreground="#90A4AE"
                                   Margin="0,2,0,0" />
                    </StackPanel>
                </StackPanel>

                <!-- Status Badge -->
                
            </Grid>
        </Border>

        <!-- Main Content -->
        <Border Grid.Row="1" 
                Background="White"
                Margin="15"
                CornerRadius="8">
            <Border.Effect>
                <DropShadowEffect Color="#000000" 
                                Opacity="0.06" 
                                BlurRadius="12" 
                                ShadowDepth="2" />
            </Border.Effect>

            <TabControl Background="Transparent"
                        BorderThickness="0"
                        Padding="0">
                
                <TabItem>
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🔌" FontSize="14" Margin="0,0,5,0" />
                            <TextBlock Text="Connection" FontSize="13" FontWeight="Medium" />
                        </StackPanel>
                    </TabItem.Header>
                    <views:ConnectionView />
                </TabItem>

                <TabItem>
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📁" FontSize="14" Margin="0,0,5,0" />
                            <TextBlock Text="Groups" FontSize="13" FontWeight="Medium" />
                        </StackPanel>
                    </TabItem.Header>
                    <views:GroupView />
                </TabItem>

                <TabItem>
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🏷️" FontSize="14" Margin="0,0,5,0" />
                            <TextBlock Text="Sensor Types" FontSize="13" FontWeight="Medium" />
                        </StackPanel>
                    </TabItem.Header>
                    <views:SensorTypeView />
                </TabItem>

                <TabItem>
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📡" FontSize="14" Margin="0,0,5,0" />
                            <TextBlock Text="Sensors" FontSize="13" FontWeight="Medium" />
                        </StackPanel>
                    </TabItem.Header>
                    <views:SensorView />
                </TabItem>

                <TabItem>
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📈" FontSize="14" Margin="0,0,5,0" />
                            <TextBlock Text="Monitoring" FontSize="13" FontWeight="Medium" />
                        </StackPanel>
                    </TabItem.Header>
                    <views:MonitoringView />
                </TabItem>

                <TabItem>
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📋" FontSize="14" Margin="0,0,5,0" />
                            <TextBlock Text="Logger" FontSize="13" FontWeight="Medium" />
                        </StackPanel>
                    </TabItem.Header>
                    <views:LoggerView />
                </TabItem>
            </TabControl>
        </Border>
    </Grid>
</Window>
